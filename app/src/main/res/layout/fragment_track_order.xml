<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.TrackOrderFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        android:gravity="center"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_track_order"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="0dp"
            android:gravity="center"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_toolbar_track_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|end">


                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/tv_order_signed_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="20/18"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_order_signed_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="10:00 AM"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.3">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton_drawable"
                            android:enabled="false"
                            android:layout_marginTop="@dimen/padding10"
                            android:layout_gravity="center"
                            android:focusable="false"/>

                        <View
                            android:id="@+id/view_del_grey"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:background="@color/green"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/padding10"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tv_order_signed_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:text="Order Signed"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_order_signed_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagos State,Nigeria"
                            android:textColor="@color/grey_black"
                            android:textSize="@dimen/text_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/tv_order_processed_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="20/18"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_order_processed_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="10:00 AM"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.3">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton_drawable"
                            android:enabled="false"
                            android:layout_gravity="center"
                            android:focusable="false"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:background="@color/green"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/padding10"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tv_order_processed_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:text="Order Processed"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_order_processed_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagos State,Nigeria"
                            android:textColor="@color/grey_black"
                            android:textSize="@dimen/text_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/tv_shipped_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="20/18"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_shipped_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="10:00 AM"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.3">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobutton_drawable"
                            android:enabled="false"
                            android:layout_gravity="center"
                            android:focusable="false"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:background="@color/view_bg"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/padding10"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tv_shipped_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:text="Shipped"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_shipped_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagos State,Nigeria"
                            android:textColor="@color/grey_black"
                            android:textSize="@dimen/text_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/tv_out_for_delivery_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="20/18"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_out_for_delivery_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="10:00 AM"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.3">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:button="@drawable/radiobutton_drawable"
                            android:enabled="false"
                            android:focusable="false" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:background="@color/view_bg"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/padding10"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tv_out_for_delivery_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:text="Out for delivery"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_out_for_delivery_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagos State,Nigeria"
                            android:textColor="@color/grey_black"
                            android:textSize="@dimen/text_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.2">

                        <TextView
                            android:id="@+id/tv_delivered_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="20/18"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_delivered_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="@dimen/padding10"
                            android:gravity="center|start"
                            android:text="10:00 AM"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.3">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="@dimen/padding10"
                            android:visibility="visible"
                            android:background="@color/view_bg"
                            android:layout_gravity="center"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:button="@drawable/radiobutton_drawable"
                            android:enabled="false"
                            android:focusable="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/padding10"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/tv_delivered_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:text="Delivered"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_delivered_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagos State,Nigeria"
                            android:textColor="@color/grey_black"
                            android:textSize="@dimen/text_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>